<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#0083ff"
        android:gravity="center"
        android:text="Planning"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center"
        android:background="#FFFFFF">

        <Button
            android:id="@+id/btn_filter_tout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Tout"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="#333333"
            android:backgroundTint="#E0E0E0"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btn_filter_nouveautes"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="NouveautÃ©s"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="#333333"
            android:backgroundTint="#E0E0E0" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container_planning"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/bottom_nav_manga"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#007FFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp">

        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/ic_home_light" />

        <ImageView
            android:id="@+id/btn_collection"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/ic_collection_light" />

        <ImageView
            android:id="@+id/btn_planning"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/ic_calendar_light" />

        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/ic_search_light" />

        <ImageView
            android:id="@+id/btn_maps"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/ic_maps_light" />
    </LinearLayout>

</LinearLayout>